<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.lessvoid.com/nifty-gui" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://raw.githubusercontent.com/void256/nifty-gui/1.4/nifty-core/src/main/resources/nifty.xsd">
    <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <!-- start screen -->
    <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <screen id="inventory" controller="mygame.Main">
        <layer id="hotBar" childLayout="absolute" backgroundColor="#0000">
            <panel childLayout="horizontal">
                <image id="slot1" filename="Models/HotBars/Add_Point.png" width="100" height="100"/>
                <image id="slot2" filename="Models/HotBars/Add_Max_Point(chosen).png" width="100" height="100"/>
                <image id="slot3" filename="Models/HotBars/Skip.png" width="100" height="100"/>
                <image id="slot4" filename="Models/HotBars/Resign.png" width="100" height="100"/>
            </panel>
        </layer>
        <layer id="cross" childLayout="absolute" backgroundColor="#0000">
            <panel childLayout="center" width="100%" height="100%">
                    <image id="black_cross" filename="Models/Black_Cross.png" width="30" height="30"/>
            </panel>
        </layer>
    </screen>
</nifty>
